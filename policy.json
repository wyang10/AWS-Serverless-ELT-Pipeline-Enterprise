{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "SQSBasic",
      "Effect": "Allow",
      "Action": [
        "sqs:CreateQueue",
        "sqs:SetQueueAttributes",
        "sqs:GetQueueAttributes",
        "sqs:ListQueues",
        "sqs:TagQueue",
        "sqs:UntagQueue",
        "sqs:DeleteQueue"
      ],
      "Resource": "*"
    },
    {
      "Sid": "CreateAndManageOwnRoles",
      "Effect": "Allow",
      "Action": [
        "iam:CreateRole",
        "iam:PutRolePolicy",
        "iam:AttachRolePolicy",
        "iam:DeleteRolePolicy",
        "iam:GetRole",
        "iam:ListRolePolicies"
      ],
      "Resource": "arn:aws:iam::818466672474:role/terraform-*"
    },
    {
      "Sid": "PassOnlyOwnRolesToServices",
      "Effect": "Allow",
      "Action": "iam:PassRole",
      "Resource": "arn:aws:iam::818466672474:role/terraform-*",
      "Condition": {
        "StringEquals": {
          "iam:PassedToService": [
            "lambda.amazonaws.com",
            "apigateway.amazonaws.com",
            "events.amazonaws.com",
            "states.amazonaws.com"
          ]
        }
      }
    }
  ]
}
